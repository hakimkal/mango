<div class="admin-login col-md-6 col-md-offset-4">
  <%= form_for @conn, Routes.admin_session_path(@conn, :send_link), [as: :session], fn f -> %>
    <div class="form-group form-control" >
      <%= text_input f, :email, placeholder: "Email",required: "required", class: "form-control" %>
    </div>
    <%= submit "Send login link", class: "btn btn-primary pull-right" %>
  <% end %>
</div>